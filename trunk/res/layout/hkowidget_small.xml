<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widgetSmallLayout"
    android:orientation="vertical"
    android:layout_width="160dp"
    android:layout_height="fill_parent"
 >
	<ImageView
   		android:id="@+id/widgetback_small"
		android:layout_width="170dp"
		android:layout_height="100dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
	/>
	<ImageView
   		android:id="@+id/tempicon_small"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="15dp"
		android:layout_alignLeft="@id/widgetback_small"
	/>
	<ImageView android:id="@+id/todayicon_small"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15dp"
		android:layout_marginTop="22dp"
	/>
	<TextView android:id="@+id/temp_small"
		style="@style/darkText"
		android:textSize="18dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/tempicon_small"
		android:layout_alignTop="@id/tempicon_small"
	/>
	<ImageView
   		android:id="@+id/humidityicon_small"
		android:layout_width="18dp"
		android:layout_height="18dp"
		android:layout_marginLeft="5dp"
		android:layout_toRightOf="@id/temp_small"
		android:layout_alignTop="@id/temp_small"
	/>
	<TextView android:id="@+id/humidity_small"
		style="@style/darkText"
		android:textSize="18dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/humidityicon_small"
		android:layout_alignTop="@id/humidityicon_small"
	/>
	<TextView android:id="@+id/uvLevel_small"
		style="@style/darkText"
		android:textSize="14dp"
		android:layout_marginLeft="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/temp_small"
		android:layout_alignLeft="@id/tempicon_small"
	/>
	<!--<TextView android:id="@+id/timeStamp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="10px"
	/>-->
	<ImageView android:id="@+id/fire_small"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="8dp"
		android:layout_below="@id/uvLevel_small"
		android:layout_alignParentBottom="true"
	/>
<!-- <ImageView android:id="@+id/rain"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_toRightOf="@id/fire"
		android:layout_alignBottom="@id/fire"
		android:layout_below="@id/temp"
	/>
-->
	<ImageView android:id="@+id/typhoon_small"
  		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_toRightOf="@id/fire_small"
		android:layout_alignBottom="@id/fire_small"
	/>
	<ImageView android:id="@+id/extreme_temp_small"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_toRightOf="@id/typhoon_small"
		android:layout_alignBottom="@id/fire_small"
	/>
	<ImageView android:id="@+id/others_small"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_toRightOf="@id/extreme_temp_small"
		android:layout_alignBottom="@id/fire_small"
	/>	
	<ImageView android:id="@+id/error_small"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_toRightOf="@id/uvLevel_small"
		android:layout_alignBottom="@id/uvLevel_small"
	/>
	<TextView android:id="@+id/updateText_small"
		android:textSize="14dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/fire_small"
		android:layout_marginLeft="10dp"
		android:textColor="#000000"
		android:text="Loading..."
		android:visibility="invisible"
	/>
	<TextView android:id="@+id/updateTime_small"
		android:textSize="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/fire_small"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15dp"
		android:textColor="#000000"
		android:text="Last:"
	/>
</RelativeLayout>